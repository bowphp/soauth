{
    "name": "bowphp/soauth",
    "description": "The social authentification package for Bow Framework",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Franck DAKIA",
            "email": "dakiafranck@gmail.com",
            "role": "Principal Maintainer"
        }
    ],
    "require": {
        "league/oauth2-client": "^2.4.1",
        "php": "^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Bow\\Soauth\\": "src/"
        }
    },
    "scripts": {
        "phpcbf": "phpcbf --standard=psr12 --severity=4 --tab-width=4 src tests",
        "phpcs": "phpcs --standard=psr12 --severity=4 --tab-width=4 src",
        "test": "phpunit --configuration phpunit.dist.xml"
    }
}
